    package="com.example.diseaseadvisor">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiseaseAdvisor">
        <activity android:name=".ui.home.europe"></activity>
        <activity android:name=".ui.home.southAmerica" />
        <activity android:name=".ui.home.asia" />
        <activity android:name=".ui.home.africa" />
        <activity
            android:name=".MainPage"
            android:label="MainPage" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage" />
    </application>

</manifest>